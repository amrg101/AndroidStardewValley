<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/alphaBackground">

    <ImageView
        android:id="@+id/header_farm_left_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/left_arrow"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/header_farm_easy_flip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flipEnabled="true"
        app:flipFrom="right"
        app:flipOnTouch="false"
        app:flipType="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/header_farm_right_arrow_image_view"
        app:layout_constraintStart_toEndOf="@+id/header_farm_left_arrow_image_view"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header_farm_name_front_text_view"
            style="@style/StardewTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="24sp"
            tools:text="Das Farm" />

        <TextView
            android:id="@+id/header_farm_name_back_text_view"
            style="@style/StardewTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:textSize="24sp"
            tools:text="Das Farm" />

    </com.wajahatkarim3.easyflipview.EasyFlipView>

    <!--<TextView-->
    <!--android:id="@+id/header_farm_name_text_view"-->
    <!--style="@style/StardewTextViewStyle"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:padding="8dp"-->
    <!--android:textSize="24sp"-->

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/filter_villager_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable">

            <android.support.design.widget.TabItem
                android:id="@+id/filter_villager_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all" />

            <android.support.design.widget.TabItem
                android:id="@+id/filter_villager_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/love" />

            <android.support.design.widget.TabItem
                android:id="@+id/filter_villager_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/like" />

            <android.support.design.widget.TabItem
                android:id="@+id/filter_villager_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/neutral" />

            <android.support.design.widget.TabItem
                android:id="@+id/filter_villager_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dislike" />

            <android.support.design.widget.TabItem
                android:id="@+id/filter_villager_hate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hate" />

        </android.support.design.widget.TabLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

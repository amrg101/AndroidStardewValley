<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sign">

    <ImageView
        android:id="@+id/header_calendar_left_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/left_arrow"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_calendar_season_text_view"
        style="@style/StardewTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawablePadding="5dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/header_calendar_right_arrow_image_view"
        app:layout_constraintStart_toEndOf="@+id/header_calendar_left_arrow_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:drawableLeft="@drawable/season_fall"
        tools:drawableStart="@drawable/season_fall"
        tools:text="Summer" />

    <ImageView
        android:id="@+id/header_calendar_right_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/right_arrow"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

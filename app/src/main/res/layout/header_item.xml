<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alphaBackground">

    <ImageView
        android:id="@+id/header_item_left_image_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/item_aerinite" />

    <TextView
        android:id="@+id/header_item_name_text_view"
        style="@style/StardewTextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/header_item_left_image_view"
        app:layout_constraintEnd_toStartOf="@+id/header_item_right_image_view"
        app:layout_constraintStart_toEndOf="@+id/header_item_left_image_view"
        app:layout_constraintTop_toTopOf="@+id/header_item_left_image_view"
        tools:text="Aerinite" />

    <ImageView
        android:id="@+id/header_item_right_image_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/header_item_left_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_item_left_image_view"
        tools:src="@drawable/item_aerinite" />

</android.support.constraint.ConstraintLayout>
